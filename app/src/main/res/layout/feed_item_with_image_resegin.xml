<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="14dp"
    android:background="@android:color/background_light"
    android:elevation="5dp"
    android:orientation="vertical"
    android:translationZ="0dp"
    android:weightSum="1">

    <RelativeLayout
        android:id="@+id/layout_anh"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="15dp"
            android:elevation="1dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/z697478288929_f868d90aa657bf0d2f4b25cab49860c1" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView"
            android:layout_alignLeft="@+id/imageView"
            android:layout_alignStart="@+id/imageView"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:background="@color/colorPrimary"
            android:elevation="2dp"
            android:text="THỜI TRANG"
            android:textColor="@color/common_google_signin_btn_text_dark_default" />
    </RelativeLayout>

    <TextView
        android:id="@+id/feed_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cô gái sở hữu nụ cười ngọt ngào khiến ai ngắm nhìn cũng phải tan chảy"
        android:textColor="@color/material_drawer_dark_background"
        android:textSize="24sp"
        tools:text="Cô gái sở hữu nụ cười ngọt ngào khiến ai ngắm nhìn cũng phải tan chảy" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/feed_attribution_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="| EVA.vn - Thế giới phụ nữ Việ"
            android:textColor="@color/common_google_signin_btn_text_light_default" />

        <TextView
            android:id="@+id/feed_attribution_middot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-" />

        <TextView
            android:id="@+id/feed_attribution_updated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2giờ" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Nụ cười quá đỗi ngọt ngào của cô bạn này thực sự làm ai cũng phải xiêu lòng."
        android:textColor="@color/common_google_signin_btn_text_dark_focused" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="14dp"
        android:background="@android:color/darker_gray" />
</LinearLayout>