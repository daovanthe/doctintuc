<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/background_light"
    android:elevation="5dp"
    android:translationZ="0dp"
    android:weightSum="1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/feed_item_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:lineSpacingExtra="2sp"
                        android:text="Anh em sinh ba cùng đỗ Trường Sĩ quan Thông tin"
                        android:textColor="@color/material_drawer_dark_background"
                        android:textSize="17sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/feed_attribution_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="14dp"
                            android:layout_marginTop="12dp"
                            android:layout_weight="1"
                            android:text="VTV - Giáo dục - RSS Feed"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/feed_item_excerpt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:lineSpacingExtra="4sp"
                        android:singleLine="false"
                        android:text="VTV. vn - Ba anh em sinh 3 ở huyện Thanh Chương, Nghệ An cùng nhau lập một “kỳ tích” khi cùng nhau thi đỗ vào trường Sĩ quan Thông tin với điểm số khá cao."
                        android:textColor="@color/md_blue_grey_800"
                        android:textSize="14sp" />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/darker_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/feed_item_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:lineSpacingExtra="2sp"
                        android:text="Xem cách tên trộm táo tợn bẻ khoá chiếc xe máy trong tích tắc"
                        android:textColor="@color/material_drawer_dark_background"
                        android:textSize="17sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/feed_attribution_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="14dp"
                            android:layout_marginTop="12dp"
                            android:layout_weight="1"
                            android:text="Báo tin tức - Xã hội - RSS Fee"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/feed_item_excerpt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:lineSpacingExtra="4sp"
                        android:singleLine="false"
                        android:text="Camera an ninh của một cửa hàng đã ghi lại hình ảnh tên trộm bẻ khóa chiếc xe máy AirBlade trong chưa đầy 10 giây rồi tẩu thoát vào tối 4/8."
                        android:textColor="@color/md_blue_grey_800"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>

        </GridLayout>

    </LinearLayout>

</LinearLayout>