<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="5dp"
    android:orientation="vertical"
    android:translationZ="0dp"
    android:weightSum="1">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:elevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.04"
            android:elevation="10dp"
            android:orientation="vertical"
            android:translationZ="0dp"
            android:weightSum="1">

            <LinearLayout
                android:id="@+id/item_title_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_margin="5dp"
                android:elevation="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="regular"
                    android:text="Hình ảnh kẹt cứng trên nhiều ngả  đường dẫn đến các bến xe tại Hà Nội"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="15dp" />
            </LinearLayout>

            <FrameLayout
                android:id="@+id/item_description_framelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_title_layout">

                <RelativeLayout
                    android:id="@+id/description_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="false"
                    android:layout_below="@+id/item_title_layout"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="0.31"
                    android:elevation="15dp"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <LinearLayout
                        android:id="@+id/content_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_weight="0.52"
                        android:elevation="0dp"
                        android:gravity="right"
                        android:orientation="horizontal"
                        android:weightSum="1">

                    </LinearLayout>

                    <TableLayout
                        android:id="@+id/content_des2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/content_description"
                        android:stretchColumns="0">

                        <TableRow

                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_gravity="center_horizontal">

                            <LinearLayout
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:layout_column="0"
                                android:layout_gravity="top|center_vertical"
                                android:layout_marginLeft="2dp"
                                android:layout_row="0"
                                android:elevation="5dp"
                                android:orientation="vertical">

                                <TableLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent">

                                    <TextView
                                        android:id="@+id/content_description_tx"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentLeft="true"
                                        android:layout_alignParentStart="true"
                                        android:layout_alignParentTop="true"
                                        android:text="Sáng 29/4, dòng người rời Thủ  đô nghỉ lễ 30/4 - 1/5 vẫn chưa  ngớt, các cửa ngõ kẹt cứng  trong nhiều giờ."
                                        android:textSize="15sp" />

                                    <TextView
                                        android:id="@+id/pubTime_txt"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentBottom="true"
                                        android:layout_alignParentLeft="true"
                                        android:layout_alignParentStart="true"
                                        android:fontFamily="Segoe UI"
                                        android:text="13h 16m ago"
                                        android:textColor="@color/colorPrimary"
                                        android:textSize="12dp"
                                        android:textStyle="italic" />
                                </TableLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:layout_row="0"
                                android:gravity="right"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/desciption_img"
                                    android:layout_width="134dp"
                                    android:layout_height="77dp"
                                    android:layout_gravity="right"
                                    android:elevation="5dp" />
                            </LinearLayout>
                        </TableRow>

                    </TableLayout>

                </RelativeLayout>

            </FrameLayout>

            <LinearLayout
                android:id="@+id/interaction_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_description_framelayout"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:elevation="15dp"
                android:orientation="horizontal"
                android:visibility="invisible"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/khao_sat_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="Roboto"
                        android:text="Khảo sát"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="80dp"
                        android:text="Đánh giá"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="14dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:elevation="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="right"
                            android:elevation="5dp"
                            android:maxHeight="15dp"
                            android:maxWidth="15dp"
                            android:minHeight="15dp"
                            android:minWidth="15dp"
                            android:src="@drawable/ic_favorite" />

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="right"
                            android:layout_marginLeft="25dp"
                            android:elevation="5dp"
                            android:minHeight="15dp"
                            android:minWidth="15dp"
                            android:src="@drawable/ic_bookmark" />

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="right"
                            android:layout_marginLeft="25dp"
                            android:elevation="5dp"
                            android:minHeight="25dp"
                            android:minWidth="25dp"
                            android:src="@drawable/ic_share" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


        </RelativeLayout>

    </FrameLayout>

</LinearLayout>